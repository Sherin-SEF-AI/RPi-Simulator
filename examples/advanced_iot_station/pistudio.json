{
  "name": "Advanced IoT Weather Station",
  "template": "advanced_iot",
  "board": "pi4",
  "version": "0.1.0",
  "description": "Comprehensive weather monitoring station with multiple sensors, displays, and actuators",
  "devices": [
    {
      "type": "bme280",
      "name": "Environmental_Sensor",
      "connection": {
        "i2c": 118
      },
      "parameters": {
        "temperature": 25.0,
        "pressure": 1013.25,
        "humidity": 50.0,
        "altitude": 0.0
      }
    },
    {
      "type": "mpu6050",
      "name": "Motion_Sensor",
      "connection": {
        "i2c": 104
      },
      "parameters": {
        "accel_x": 0.0,
        "accel_y": 0.0,
        "accel_z": 1.0,
        "gyro_x": 0.0,
        "gyro_y": 0.0,
        "gyro_z": 0.0
      }
    },
    {
      "type": "lcd1602",
      "name": "Display",
      "connection": {
        "i2c": 39
      },
      "parameters": {
        "backlight": true,
        "contrast": 50
      }
    },
    {
      "type": "neopixel",
      "name": "Status_Strip",
      "connection": {
        "pin": 18
      },
      "parameters": {
        "num_pixels": 8,
        "brightness": 128,
        "animation": "static"
      }
    },
    {
      "type": "servo",
      "name": "Weather_Vane",
      "connection": {
        "pin": 19
      },
      "parameters": {
        "position": 90,
        "speed": 60,
        "min_pulse": 1.0,
        "max_pulse": 2.0
      }
    },
    {
      "type": "buzzer",
      "name": "Alert_Buzzer",
      "connection": {
        "pin": 20
      },
      "parameters": {
        "frequency": 1000,
        "volume": 70
      }
    },
    {
      "type": "led",
      "name": "Status_LED",
      "connection": {
        "pin": 21
      },
      "parameters": {
        "color": "blue",
        "brightness": 255
      }
    }
  ],
  "connections": [
    {
      "from_pin": "GPIO2",
      "to_pin": "Environmental_Sensor:SDA",
      "wire_color": "blue"
    },
    {
      "from_pin": "GPIO3",
      "to_pin": "Environmental_Sensor:SCL",
      "wire_color": "yellow"
    },
    {
      "from_pin": "GPIO2",
      "to_pin": "Motion_Sensor:SDA",
      "wire_color": "blue"
    },
    {
      "from_pin": "GPIO3",
      "to_pin": "Motion_Sensor:SCL",
      "wire_color": "yellow"
    },
    {
      "from_pin": "GPIO2",
      "to_pin": "Display:SDA",
      "wire_color": "blue"
    },
    {
      "from_pin": "GPIO3",
      "to_pin": "Display:SCL",
      "wire_color": "yellow"
    },
    {
      "from_pin": "GPIO18",
      "to_pin": "Status_Strip:data",
      "wire_color": "green"
    },
    {
      "from_pin": "GPIO19",
      "to_pin": "Weather_Vane:signal",
      "wire_color": "orange"
    },
    {
      "from_pin": "GPIO20",
      "to_pin": "Alert_Buzzer:positive",
      "wire_color": "purple"
    },
    {
      "from_pin": "GPIO21",
      "to_pin": "Status_LED:anode",
      "wire_color": "red"
    },
    {
      "from_pin": "3V3",
      "to_pin": "Environmental_Sensor:VCC",
      "wire_color": "red"
    },
    {
      "from_pin": "3V3",
      "to_pin": "Motion_Sensor:VCC",
      "wire_color": "red"
    },
    {
      "from_pin": "5V",
      "to_pin": "Display:VCC",
      "wire_color": "red"
    },
    {
      "from_pin": "5V",
      "to_pin": "Status_Strip:power",
      "wire_color": "red"
    },
    {
      "from_pin": "5V",
      "to_pin": "Weather_Vane:power",
      "wire_color": "red"
    },
    {
      "from_pin": "GND",
      "to_pin": "Environmental_Sensor:GND",
      "wire_color": "black"
    },
    {
      "from_pin": "GND",
      "to_pin": "Motion_Sensor:GND",
      "wire_color": "black"
    },
    {
      "from_pin": "GND",
      "to_pin": "Display:GND",
      "wire_color": "black"
    },
    {
      "from_pin": "GND",
      "to_pin": "Status_Strip:ground",
      "wire_color": "black"
    },
    {
      "from_pin": "GND",
      "to_pin": "Weather_Vane:ground",
      "wire_color": "black"
    },
    {
      "from_pin": "GND",
      "to_pin": "Alert_Buzzer:negative",
      "wire_color": "black"
    },
    {
      "from_pin": "GND",
      "to_pin": "Status_LED:cathode",
      "wire_color": "black"
    }
  ],
  "environment": {
    "temperature": 25.0,
    "humidity": 50.0,
    "pressure": 1013.25,
    "light_level": 100.0,
    "wind_speed": 5.0,
    "wind_direction": 180.0,
    "motion_enabled": true,
    "gps_enabled": false
  },
  "testing": {
    "test_scenarios": [
      {
        "name": "Normal Operation",
        "description": "Test under normal weather conditions",
        "environment": {
          "temperature": 22.0,
          "humidity": 45.0,
          "wind_speed": 8.0
        },
        "expected_alerts": 0
      },
      {
        "name": "High Temperature Alert",
        "description": "Test high temperature alert system",
        "environment": {
          "temperature": 35.0,
          "humidity": 30.0
        },
        "expected_alerts": 1
      },
      {
        "name": "Storm Conditions",
        "description": "Test during storm with high wind and humidity",
        "environment": {
          "temperature": 18.0,
          "humidity": 95.0,
          "wind_speed": 45.0
        },
        "expected_alerts": 2
      }
    ]
  }
}